{
  "manifest_version": 3,
  "name": "Repro Wizard",
  "version": "0.1.1",
  "description": "Generate self-contained HTML test cases from selected text using AI.",
  "permissions": [
    "contextMenus",
    "storage",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "pictures/icons/icon-16.png",
    "32": "pictures/icons/icon-32.png",
    "48": "pictures/icons/icon-48.png",
    "128": "pictures/icons/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "@repro-wizard",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
