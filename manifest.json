{
  "manifest_version": 3,
  "name": "Repro Wizard",
  "version": "0.1.1",
  "description": "Right-click selected bug reports to generate minimal HTML test pages via AI.",
  "permissions": [
    "contextMenus",
    "storage",
    "downloads",
    "tabs"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "repro-wizard-tester@mozilla.com"
    }
  }
}
